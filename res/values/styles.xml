<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/action_bar_style</item>
    </style>
    
    <style name="action_bar_style" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- <item name="android:height">55dp</item> -->
    </style>
    
    <color name="nav_user_loggedIn">#00FC7E</color>
    <color name="nav_user_notLoggedIn">#ABABAB</color>
    
    <color name="nav_item_divider">#999</color>
    <color name="nav_item">#777</color>
    <color name="nav_item_pressed">#CCC</color>
    <color name="nav_item_checked">#AAA</color>
    
    <color name="search_item_divider">#999</color>
    <color name="search_item_even">#FFF</color>
    <!--<color name="search_item_odd">#EEE</color>-->
    <color name="search_item_odd">#4BD9BF</color>
    <color name="search_item_pressed">#BBB</color>
    <color name="search_item_checked">#CCC</color>
    <color name="search_item_textColor_even">#000</color>
    <color name="search_item_textColor_odd">#FFF</color>
    
    <style name="title_detail_header">
        <item name="android:background">#4BD9BF</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
    </style>
    
    <color name="title_detail_divider">#EEE</color>
    
    <style name="title_detail_value">
        <item name="android:background">#FFF</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
