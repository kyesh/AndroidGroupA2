<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/action_bar_style</item>
    </style>
    
    <style name="action_bar_style" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- <item name="android:height">55dp</item> -->
    </style>
    
    <color name="nav_user_loggedIn">#00FC7E</color>
    <color name="nav_user_notLoggedIn">#ABABAB</color>
    
    <color name="nav_item_divider">#999</color>
    <color name="nav_item">#777</color>
    <color name="nav_item_pressed">#CCC</color>
    <color name="nav_item_checked">#AAA</color>

</resources>
