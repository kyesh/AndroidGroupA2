<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#FFF"
    >
    
    <TextView 
        android:id="@+id/borrowings_list_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />
    
    <View 
        android:id="@+id/borrowings_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/nav_item_divider"
        />
    
	<LinearLayout
	    android:id="@+id/borrowings_list_item_container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
		>
	    
	    <ImageView
	        android:id="@+id/borrowings_list_item_image"
	        android:layout_width="70dp"
	        android:layout_height="100dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginBottom="10dp"
	        android:background="#666" 
	        />
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:orientation="vertical"
			>
			
	        <TextView
	            android:id="@+id/borrowings_list_item_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:maxLines="2"
	            android:textSize="15sp"
	            android:textStyle="bold"
	            />
	        
	        <TextView
	            android:id="@+id/borrowings_list_item_text1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:maxLines="1"
	            android:textSize="12sp"
	            />
	        
	        <TextView
	            android:id="@+id/borrowings_list_item_text2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:maxLines="1"
	            android:textSize="12sp"
	            />
	        
	        <TextView
	            android:id="@+id/borrowings_list_item_text3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:maxLines="1"
	            android:textSize="12sp"
	            />
	        
	        <Button
	            android:id="@+id/borrowings_list_item_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_gravity="center_horizontal"
	            android:minWidth="150dp"
	            />
	        
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
