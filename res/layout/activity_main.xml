<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.hj.androidgroupa2.MainActivity"
    >

	<FrameLayout
	    android:id="@+id/content_frame"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	/>
	
	<LinearLayout
	    android:id="@+id/drawer_menu"
	    android:layout_width="260dp"
	    android:layout_height="match_parent"
	    android:layout_gravity="start"
	    android:background="#777"
	    android:orientation="vertical"
		>
		
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/nav_user_bar_padding"
	        android:paddingBottom="@dimen/nav_user_bar_padding"
	        android:paddingLeft="16dp"
	        android:paddingRight="16dp"
	        android:background="#00FC7E"
	        android:orientation="vertical"
	        android:textSize="16sp"
	        >
		        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Jonathan Holm"
	        	android:textSize="21sp"
	        	android:textStyle="bold"
	            />
	        
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="jonathan.eric.holm@gmail.com"
	        	android:textSize="16sp"
		        />
		        
	    </LinearLayout>
	    
	    <ListView
	        android:id="@+id/nav_list" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="start"
	        android:choiceMode="singleChoice"
	        android:divider="@android:color/transparent"
	        android:dividerHeight="0dp"
	        android:background="@color/nav_item"
	        />
	    
	</LinearLayout>
<!-- </LinearLayout> -->
</android.support.v4.widget.DrawerLayout>
